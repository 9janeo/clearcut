		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email %><br />
		</div>
		<div class="form-group">
			<%= f.label :phone %>
			<%= f.text_field :phone %><br />
		</div>
		<div class="form-group">
			<%= f.label :notes %>
			<%= f.text_field :notes %><br />
		</div>
		<div class="form-group">
			<%= f.label :types %>
			<%= f.check_box :type, {multiple: true}, 1, nil %><br />
		</div>
			<%= f.submit %>
	<% end %>